/* pages/recommendSong/recommendSong.wxss */

.container .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.header image {
  width: 100%;
  height: 100%;
  
  /* z-index: 1; */
}
.header .data {
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 30rpx;
  color: #eee;
  margin-left: -100rpx;
  margin-top: -50rpx;
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  padding-left: 20rpx;
  z-index: 1;
}

.header .data .day {
  font-size: 38rpx;
}

/* 推荐列表头部 */
.recommenList {
  padding: 0 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
  position: relative;
  top: -20rpx;
}
.recommenList .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .changeMore{
  float: right;
}

/* 内容区 */
.listSrcoll {
  height: calc(100vh - 380rpx);
}
.listItem {
  display: flex;
  position: relative;
}

.listItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.musicInfo{
  display: flex;
  flex-direction: column;
}
.musicInfo text{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.listItem .iconfont {
  position: absolute;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  /* background-color: #000; */
}