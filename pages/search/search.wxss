/* pages/search/search.wxss */
.searchContainer {
  padding: 0 20rpx;
}
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx;
}

.searchInput {
  position: relative;
  flex: 1;
  background: rgba(237, 237, 237, 0.3);
  /* padding-left: 10rpx; */
  border-radius: 20rpx;
}

.header .cancel {
  width: 100rpx;
  text-align: center;
}
.seachIcon{
  position: absolute;
}
.searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
}
.clear {
  position: absolute;
  width: 40rpx;
  text-align: center;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
  z-index: 20;
}
.placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 热搜榜 */
.hotpContainer {
  margin-top: 10rpx;
}
.hotpContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotList .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
}
.hotItem .order {
  margin: 0 10rpx;
}
.hotItem .hotIcon {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}


/* 搜索内容展示 */
.searchtext {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

/* 搜索历史记录 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  margin: 20rpx 0;
}
.history .title {
  font-size: 28rpx;
  height: 50rpx;
}
.history .historyItem {
  height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  padding: 0 30rpx;
  margin: 0 20rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.history .delete {
  position: absolute;
  bottom: 17rpx;
  right: 10rpx;
  font-size: 36rpx;
}